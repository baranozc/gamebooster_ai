@model List<GameBooster.Core.Entities.UserSystem>

@{
    ViewData["Title"] = "Profilim";
    var gpuList = ViewBag.Gpus as List<GameBooster.Core.Entities.GPU>;
    var cpuList = ViewBag.Cpus as List<GameBooster.Core.Entities.CPU>;
    var ramOptions = ViewBag.RamOptions as List<int>;
}

<div class="container mt-5 text-white">
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-4 border-0 shadow-sm" role="alert" style="background-color: #198754; color: white;">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mt-4 border-0 shadow-sm" role="alert" style="background-color: #dc3545; color: white;">
            ‚ö†Ô∏è @TempData["ErrorMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-lg border-0 mb-5 bg-dark text-white" style="border: 1px solid #198754 !important;">
        <div class="card-header bg-success text-white">
            <h5 class="m-0 py-1"><i class="fas fa-plus-circle me-2"></i>Yeni Sistem Olu≈ütur</h5>
        </div>
        <div class="card-body">
            <form asp-action="AddSystem" method="post" class="row g-3 align-items-end">

                <div class="col-md-3">
                    <label class="form-label fw-bold">Sistem Adƒ±</label>
                    <input type="text" name="systemName" class="form-control bg-secondary text-white border-0" placeholder="√ñrn: Oyun Canavarƒ±" required>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Ekran Kartƒ±</label>
                    <select name="gpuId" class="form-select bg-secondary text-white border-0" required>
                        <option value="">Se√ßiniz...</option>
                        @foreach (var gpu in gpuList!)
                        {
                            <option value="@gpu.Id">@gpu.Name</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">ƒ∞≈ülemci</label>
                    <select name="cpuId" class="form-select bg-secondary text-white border-0" required>
                        <option value="">Se√ßiniz...</option>
                        @foreach (var cpu in cpuList!)
                        {
                            <option value="@cpu.Id">@cpu.Name</option>
                        }
                    </select>
                </div>

                <div class="col-md-2">
                    <label class="form-label">RAM</label>
                    <select name="ramAmount" class="form-select bg-secondary text-white border-0" required>
                        @foreach (var ram in ramOptions!)
                        {
                            <option value="@ram">@ram GB</option>
                        }
                    </select>
                </div>

                <div class="col-md-1">
                    <button type="submit" class="btn btn-success w-100 fw-bold">Ekle</button>
                </div>
            </form>
        </div>
    </div>

    <hr class="my-5 border-secondary">
    
    <h2 class="mb-4 d-flex align-items-center" style="color: #00d2ff; text-shadow: 0 0 10px rgba(0, 210, 255, 0.3);">
        <i class="fas fa-desktop me-3"></i> Kayƒ±tlƒ± Sistemlerim
        
       <span class="badge bg-dark border border-secondary text-white-50 fs-6 ms-3 shadow-sm" 
              style="text-shadow: none; font-size: 0.85rem !important;" 
              title="Bu veri veritabanƒ±ndan Stored Procedure (SP) ile √ßekilmektedir.">
            <i class="fas fa-chart-pie me-2 text-warning"></i>Toplam Kayƒ±t: <span class="text-white fw-bold">@ViewBag.SpSystemCount</span>
        </span>
    </h2>

    @if (ViewBag.SoapMessage != null)
    {
        <div class="card mb-4 border-0 shadow-sm" 
             style="background: linear-gradient(90deg, rgba(13,110,253,0.15) 0%, rgba(13,110,253,0.02) 100%); border-left: 4px solid #0d6efd !important;">
            <div class="card-body py-3 d-flex align-items-center">
                <div class="me-3 text-primary">
                    <i class="fas fa-globe-americas fa-2x"></i>
                </div>
                
                <div>
                    <h6 class="fw-bold mb-0 text-white" style="font-size: 0.9rem; letter-spacing: 0.5px; text-transform: uppercase;">
                        Global Donanƒ±m Doƒürulama (SOAP)
                    </h6>
                    <small class="text-white-50">
                        @ViewBag.SoapMessage
                    </small>
                </div>

                <div class="ms-auto text-success">
                    <i class="fas fa-check-circle fa-lg"></i>
                </div>
            </div>
        </div>
    }

    @if (Model != null && Model.Count > 0)
    {
        <div class="row">
            @foreach (var sys in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg h-100 bg-dark text-white border-0" style="border: 1px solid #007bff !important;">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <span class="fw-bold">@sys.SystemName</span>
                            <small class="text-white-50">@sys.CreatedDate.ToShortDateString()</small>
                        </div>
                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2"><span class="me-2">üéÆ</span><strong>GPU:</strong> @sys.GPU.Name</li>
                                <li class="mb-2"><span class="me-2">üß†</span><strong>CPU:</strong> @sys.CPU.Name</li>
                                <li class="mb-0"><span class="me-2">üíæ</span><strong>RAM:</strong> @sys.RamAmount GB</li>
                            </ul>
                        </div>
                        <div class="card-footer bg-transparent border-0 text-end pb-3">
                            <form asp-action="DeleteSystem" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@sys.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger px-3"
                                    onclick="return confirm('Bu sistemi silmek istediƒüinize emin misiniz?');">
                                    <i class="fas fa-trash-alt me-1"></i> Sil
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info bg-dark text-info border-info text-center mt-4 p-4">
            <i class="fas fa-info-circle fa-2x mb-3"></i><br>
            Hen√ºz kayƒ±tlƒ± bir sisteminiz yok. Yukarƒ±daki formdan ekleyebilirsiniz.
        </div>
    }
</div>

<style>
    /* Input ve Select odaklandƒ±ƒüƒ±nda parlamayƒ± d√ºzeltir */
    .form-control:focus, .form-select:focus {
        background-color: #495057 !important;
        color: white !important;
        box-shadow: 0 0 0 0.25rem rgba(40, 167, 69, 0.25);
        border-color: #28a745;
    }
    /* Option renklerini d√ºzeltir (Dropdown a√ßƒ±lƒ±nca) */
    option {
        background: #343a40;
        color: white;
    }
    /* Placeholder rengini a√ßar */
    ::placeholder {
        color: #adb5bd !important;
        opacity: 0.5;
    }
</style>