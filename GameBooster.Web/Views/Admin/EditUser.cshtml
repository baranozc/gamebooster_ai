@model GameBooster.Core.Entities.AppUser

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="m-0">✏️ Kullanıcı Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="EditUser" method="post">

                        <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display:none">
                        </div>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger"></div>
                        }

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label">Ad</label>
                            <input asp-for="FirstName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" required />
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success w-50">Kaydet</button>
                            <a asp-action="UserList" class="btn btn-secondary w-50">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>