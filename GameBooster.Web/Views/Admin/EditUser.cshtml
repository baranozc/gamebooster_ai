@model GameBooster.Core.Entities.AppUser

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-secondary" style="background-color: rgba(30, 30, 40, 0.9);">
                
                <div class="card-header bg-transparent border-bottom border-secondary text-center py-3">
                    <h4 class="m-0 fw-bold text-warning">✏️ Kullanıcı Düzenle</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="EditUser" method="post">

                        <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="display:none">
                        </div>
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger"></div>
                        }

                        <input type="hidden" asp-for="Id" />

                        <div class="mb-3">
                            <label class="form-label text-white fw-bold">Ad</label>
                            <input asp-for="FirstName" class="form-control bg-dark text-white border-secondary" required />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label text-white fw-bold">Soyad</label>
                            <input asp-for="LastName" class="form-control bg-dark text-white border-secondary" required />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label text-white fw-bold">Email</label>
                            <input asp-for="Email" class="form-control bg-dark text-white border-secondary" type="email" required />
                        </div>

                        <div class="d-flex gap-3 mt-4">
                            <button type="submit" class="btn btn-success flex-grow-1 fw-bold">
                                <i class="fas fa-save"></i> Kaydet
                            </button>
                            <a asp-action="UserList" class="btn btn-outline-secondary flex-grow-1 fw-bold text-light">
                                <i class="fas fa-times"></i> İptal
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>