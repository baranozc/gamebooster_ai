@model List<GameBooster.Core.Entities.SystemDetailModel>

@{
    ViewData["Title"] = "Sistem Raporları (View)";
    Layout = "_Layout";
}

<div class="container mt-5 text-white">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-info">
            <i class="fas fa-chart-bar me-2"></i>Sistem Detay Raporu
        </h2>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Panele Dön
        </a>
    </div>

    <div class="alert alert-dark border-info text-info shadow-sm mb-4">
        <i class="fas fa-database me-2"></i>
        Bu tablo verileri, veritabanındaki <strong>vw_SystemDetails</strong> SQL View'inden çekilmektedir.
    </div>

    <div class="card bg-dark border-secondary shadow-lg">
        <div class="card-body p-0">
            <table class="table table-dark table-striped table-hover mb-0">
                <thead class="bg-secondary text-white">
                    <tr>
                        <th class="py-3 ps-4">ID</th>
                        <th class="py-3">Kullanıcı</th>
                        <th class="py-3">Sistem Adı</th>
                        <th class="py-3">RAM</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 text-white-50">#@item.Id</td>
                                <td>
                                    <span class="badge bg-primary bg-opacity-25 text-primary border border-primary border-opacity-25">
                                        <i class="fas fa-user me-1"></i> @item.UserName
                                    </span>
                                </td>
                                <td class="fw-bold text-warning">@item.SystemName</td>
                                <td>@item.RamAmount GB</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                <i class="fas fa-info-circle me-1"></i> Gösterilecek veri bulunamadı.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="mt-3 text-end text-muted small">
        Toplam Kayıt: @(Model?.Count ?? 0)
    </div>
</div>